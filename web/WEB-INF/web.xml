<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
		 version="3.0">
	<servlet>
		<servlet-name>GetList</servlet-name>
		<servlet-class>ua.kiev.prog.GetListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetList</servlet-name>
		<url-pattern>/get</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>GetListChatRoom</servlet-name>
		<servlet-class>ua.kiev.prog.GetListChatRoomServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetListChatRoom</servlet-name>
		<url-pattern>/getGetListChatRoom</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>GetRegistr</servlet-name>
		<servlet-class>ua.kiev.prog.GetRegistraionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetRegistr</servlet-name>
		<url-pattern>/getR</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AddChat</servlet-name>
		<servlet-class>ua.kiev.prog.AddChatRoomServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddChat</servlet-name>
		<url-pattern>/addC</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>DelChat</servlet-name>
		<servlet-class>ua.kiev.prog.getDeleteFromChatServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DelChat</servlet-name>
		<url-pattern>/getDeleteFromChat</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>GetUsers</servlet-name>
		<servlet-class>ua.kiev.prog.GetListUsersStatusServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetUsers</servlet-name>
		<url-pattern>/getUsers</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Add</servlet-name>
		<servlet-class>ua.kiev.prog.AddServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Add</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>getWeb</servlet-name>
		<servlet-class>ua.kiev.prog.GetListWebServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>getWeb</servlet-name>
		<url-pattern>/weblistmessages</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AddWeb</servlet-name>
		<servlet-class>ua.kiev.prog.addWebRegistrationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddWeb</servlet-name>
		<url-pattern>/registrationWeb</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>WelcomeChat.html</welcome-file>
	</welcome-file-list>
</web-app>
